<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChildDashboard">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- First Child Entry -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="start">

                        <!-- Detail TextView for Child 1 -->

                        <TextView
                            android:id="@+id/textViewTitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Johnny Kris"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="59dp"
                            android:layout_height="58dp"
                            app:srcCompat="@drawable/kid1" />

                        <TextView
                            android:id="@+id/textViewDetail1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loves to play outdoors"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Second Child Entry -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintTop_toBottomOf="@id/cardView1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="start">

                        <!-- Detail TextView for Child 1 -->
                        <TextView
                            android:id="@+id/textViewTitle3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Abdul Khan"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="77dp"
                            android:layout_height="60dp"
                            app:srcCompat="@drawable/kid2" />

                        <TextView
                            android:id="@+id/textViewDetail3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Favorite superhero is superman"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintTop_toBottomOf="@id/cardView2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/textViewTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Josh Beccon"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                        <!-- Detail TextView for Child 1 -->
                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="113dp"
                            android:layout_height="111dp"
                            app:srcCompat="@drawable/kid3" />

                        <TextView
                            android:id="@+id/textViewDetail4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wants to be a chef when he grows up"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintTop_toBottomOf="@id/cardView3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="start">

                        <!-- Detail TextView for Child 1 -->
                        <TextView
                            android:id="@+id/textViewTitle4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tommy Egan"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="111dp"
                            android:layout_height="97dp"
                            app:srcCompat="@drawable/kid4" />

                        <TextView
                            android:id="@+id/textViewDetail5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":Loves movies and comics"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintTop_toBottomOf="@id/cardView4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/textViewTitle6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Freddy Kruger"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                        <!-- Detail TextView for Child 1 -->
                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="91dp"
                            android:layout_height="92dp"
                            app:srcCompat="@drawable/kid10" />

                        <TextView
                            android:id="@+id/textViewDetail6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wants to be president when he grows up"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintTop_toBottomOf="@id/cardView5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/textViewTitle27"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eren Yaeger"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                        <!-- Detail TextView for Child 1 -->
                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="89dp"
                            android:layout_height="102dp"
                            app:srcCompat="@drawable/kid6" />

                        <TextView
                            android:id="@+id/textViewDetail7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loves space and wants to be astronut"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintTop_toBottomOf="@id/cardView6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/textViewTitle8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jessica Green"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                        <!-- Detail TextView for Child 1 -->
                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="75dp"
                            android:layout_height="74dp"
                            app:srcCompat="@drawable/kid8" />

                        <TextView
                            android:id="@+id/textViewDetail8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loves wrestling and wants to go pro"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintTop_toBottomOf="@id/cardView7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/textViewTitle990"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jerome Ackerman"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                        <!-- Detail TextView for Child 1 -->
                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="88dp"
                            android:layout_height="70dp"
                            app:srcCompat="@drawable/kid9" />

                        <TextView
                            android:id="@+id/textViewDetail99"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plays football and wants to go pro"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintTop_toBottomOf="@id/cardView8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/textViewTitle9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Barack Biden"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                        <!-- Detail TextView for Child 1 -->
                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="94dp"
                            android:layout_height="117dp"
                            app:srcCompat="@drawable/kid7" />

                        <TextView
                            android:id="@+id/textViewDetail9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aims to be president one day"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintTop_toBottomOf="@id/cardView9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        tools:src="@tools:sample/avatars" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/textViewTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Child 2"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                        <!-- Detail TextView for Child 1 -->
                        <TextView
                            android:id="@+id/textViewDetail2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add details about the image and/or the heading"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>